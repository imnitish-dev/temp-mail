{
  "name": "temp-mail",
  "version": "0.0.1",
  "description": "temporary mail service",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint --max-warnings=0  --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "build": "rimraf ./build && esbuild src/index.ts --platform=node --bundle --minify --outfile=build/index.js",
    "start": "cross-env NODE_ENV=production node build/index.js"
  },
  "author": "Nitish Gupta",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "esbuild": "^0.21.0",
    "express": "^4.19.2",
    "express-list-routes": "^1.2.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "mailparser": "^3.7.1",
    "mongoose": "^8.3.2",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.2.2",
    "smtp-server": "^3.13.4",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.6",
    "@types/mailparser": "^3.4.4",
    "@types/morgan": "^1.9.9",
    "@types/smtp-server": "^3.5.10",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3"
  }
}
